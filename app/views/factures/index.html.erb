<div class="container">
  <div class="row">
    <div class="col-md-4 align-items-center">
      <h1>Liste des factures</h1>
      <div class="m-4">
        <%= link_to "Nouvelle Facture", {controller: "factures", action: "new"}, class: "btn btn-primary" %>
      </div>
      <div class="card min-vw-75">
        <div class="card-category">
          <ul class="list-group">
              <% @factures.each do |facture| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div class="col-md-6">
                    <td><%= link_to facture.client_id, facture %></td>
                  </div>

                  <div class="col-md-3 align-items-center">
                    <span class="badge badge-primary badge-pill">1</span>
                    <%= link_to "Edit", edit_facture_path(facture), class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
