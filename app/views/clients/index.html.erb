<div class="container">
  <div class="row">
    <div class="col-md-4 align-items-center">
      <h1>Liste des Clients</h1>
      <div class="m-4">
        <%= link_to "Nouveau Client", {controller: "clients", action: "new"}, class: "btn btn-primary" %>
      </div>
      <div class="card min-vw-75">
        <div class="card-category">
          <ul class="list-group">
              <% @clients.each do |client| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                  <div class="col-md-6">
                    <td><%= link_to client.nom, client %></td>
                  </div>
                  <div class="col-md-3">
                    <td><%= client.ville %></td>
                  </div>
                  <div class="col-md-3 align-items-center">
                    <span class="badge badge-primary badge-pill">1</span>
                    <%= link_to "Edit", edit_client_path(client), class: "btn btn-outline-primary btn-sm" %>
                  </div>
                </li>
              <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
